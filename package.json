{
  "name": "lottie-preview",
  "displayName": "Lottie Preview",
  "description": "lottie animation preview",
  "publisher": "ZengFeng",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.84.0"
  },
  "icon": "app_icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/gjwlfeng/lottie_preview.git"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "lottie-preview.lottie_preview",
        "title": "%lottie-preview.lottie_preview%"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "lottie-preview.lottie_preview",
          "group": "a_lottie-preview@1",
          "when": "resourceExtname == .json"
        }
      ]
    },
    "configuration": {
      "title": "Lottie Preview",
      "properties": {
        "lottie-preview.isResidentMemory": {
          "type": "boolean",
          "default": false,
          "description": "%lottie-preview.is_resident_memory%"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.84.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "eslint": "^8.47.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.1.6",
    "ts-loader": "^9.4.4",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "@vscode/test-electron": "^2.3.4"
  },
  "dependencies": {
    "vscode-nls-i18n": "^0.2.4"
  }
}